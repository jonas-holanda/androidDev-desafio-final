<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/text_Label_Home"
        style="@style/fontDefaultTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_Label_Home"
        android:textAlignment="center"
        android:textColor="@color/tertiary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_View_Challenge"
        style="@style/btnDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_View_Challenge"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_gradient" />

    <include
        layout="@layout/activity_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp" />

    <include
        layout="@layout/activity_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
